<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/counter"
        android:textColor="@color/purple_500"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_increment"
        app:layout_constraintEnd_toEndOf="@+id/btn_increment"
        app:layout_constraintStart_toStartOf="@+id/btn_increment" />

    <Button
        android:id="@+id/bnt_switchVisibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/switch_visibility"
        app:layout_constraintEnd_toEndOf="@+id/btn_randomColor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_randomColor"
        app:layout_constraintTop_toBottomOf="@+id/btn_randomColor" />

    <Button
        android:id="@+id/btn_increment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/increment"
        app:layout_constraintBottom_toTopOf="@+id/btn_randomColor"
        app:layout_constraintEnd_toEndOf="@+id/btn_randomColor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_randomColor" />

    <Button
        android:id="@+id/btn_randomColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/random_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548" />

</androidx.constraintlayout.widget.ConstraintLayout>